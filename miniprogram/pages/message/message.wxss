/* miniprogram/pages/message/message.wxss */

.bottom_box {
      width: 100%;
      display: flex;
      box-sizing: border-box;
      padding: 0 10rpx;
      flex-direction: column;
      margin-top: 5px;

}

.bottom_card {
      position: relative;
      width: 100%;
      height: 150rpx;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1rpx solid #eee;
      background:#fff;
}
.bottom_card button{
      width: 100%;
      height: 100%;
      position: absolute;
      left: 0;
      top: 0;
      opacity: 0.01;
}
.bottom_card image {
      width: 14rpx;
      height: 25rpx;
}

.bottom_1 {
      display: flex;
      height: 100%;
      align-items: center;
}

.bottom_1 image {
      margin-left: 10px;
      width: 100rpx;
      height: 100rpx;
}

.bottom_1 view {
      font-size: 14px;
      letter-spacing: 3rpx;
      padding-left: 30rpx;
      width: 150px;
      overflow: hidden;
}
.time{
      width: 100%;
      font-size: 10px;
      text-align: right;
      margin-right: 5px;
}